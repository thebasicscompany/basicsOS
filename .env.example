# =============================================================================
# Basics OS — Environment Variables
# Copy this file to .env and fill in your values.
# =============================================================================

# -----------------------------------------------------------------------------
# Database (REQUIRED)
# PostgreSQL connection string. Use Docker locally: docker compose up -d
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/basicsos

# -----------------------------------------------------------------------------
# Auth (REQUIRED)
# Generate a secret: openssl rand -base64 32
# -----------------------------------------------------------------------------
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# App URL — base URL for invite links, branding API, and overlay quick actions
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# API URL — web and mobile clients use this to reach the tRPC server
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_API_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Redis — BullMQ job queues and rate limiting (defaults to localhost:6379)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# AI — LLM chat completions and embeddings
# Set AI_API_KEY (any OpenAI-compatible key) to enable the AI assistant and
# meeting summarization. Falls back to ANTHROPIC_API_KEY for chat and
# OPENAI_API_KEY for embeddings if AI_API_KEY is not set.
# Without any key, AI responses and semantic search return stub results.
# -----------------------------------------------------------------------------
AI_API_KEY=
AI_API_URL=https://api.anthropic.com

ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# Deepgram — live audio transcription in Meetings
# Without this, transcript upload still works but live mic transcription is disabled.
# -----------------------------------------------------------------------------
DEEPGRAM_API_KEY=

# -----------------------------------------------------------------------------
# Email — invite emails via Resend (https://resend.com)
# Without this, invite emails are logged to the console only.
# -----------------------------------------------------------------------------
RESEND_API_KEY=
EMAIL_FROM=noreply@yourcompany.com

# -----------------------------------------------------------------------------
# Branding — shown in invite emails and the branding API (/api/branding)
# -----------------------------------------------------------------------------
BASICOS_COMPANY_NAME=Your Company
BASICOS_LOGO_URL=
BASICOS_ACCENT_COLOR=#6366f1

# -----------------------------------------------------------------------------
# MCP Servers
# MCP_TENANT_ID: the tenant the Company MCP server operates as (admin access).
# MCP_TRANSPORT: "stdio" (for Claude Desktop) or "http" (for network access).
# -----------------------------------------------------------------------------
MCP_TENANT_ID=
MCP_TRANSPORT=stdio

# -----------------------------------------------------------------------------
# CORS — comma-separated list of allowed origins in production.
# In development (NODE_ENV != production) all origins are allowed.
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# Collaboration WebSocket — Hocuspocus server for real-time document editing
# -----------------------------------------------------------------------------
NEXT_PUBLIC_COLLAB_URL=ws://localhost:4001

# -----------------------------------------------------------------------------
# Desktop app — Electron loads this URL
# -----------------------------------------------------------------------------
BASICOS_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Features
# -----------------------------------------------------------------------------
# Set to "true" to strip PII (email, phone, SSN, CC) from content before LLM calls
ENABLE_PII_REDACTION=false

# API server port (default: 3001)
PORT=3001
