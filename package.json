{
  "name": "basicsos",
  "private": true,
  "version": "0.1.0",
  "description": "BasicOS â€” Open-source company operating system",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "pnpm --filter @basicsos/db migrate",
    "db:seed": "pnpm --filter @basicsos/db seed",
    "db:studio": "pnpm --filter @basicsos/db studio",
    "gen:module": "plop",
    "setup": "tsx scripts/setup-wizard.ts",
    "dev:setup": "bash scripts/dev-setup.sh",
    "db:generate": "pnpm --filter @basicsos/db generate"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0",
    "@types/node": "^22.0.0",
    "plop": "^4.0.1",
    "tsx": "^4.19.0",
    "vitest": "^2.1.0"
  },
  "pnpm": {
    "overrides": {
      "ioredis": "5.4.0",
      "@types/react": "^18.3.0",
      "@types/react-dom": "^18.3.0"
    }
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
