    "drizzle-orm": "^0.44.0",
    "hono": "^4.6.0",
    "ioredis": "^5.4.0",
    "resend": "^6.9.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@basicsos/config": "workspace:*",
    "@types/node": "^22.0.0",
