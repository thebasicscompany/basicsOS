{
  "name": "@basicsos/db",
  "version": "0.0.1",
  "private": true,
  "description": "BasicOS database schema and migrations",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "generate": "bunx drizzle-kit generate",
    "migrate": "bunx drizzle-kit push",
    "migrate:sql": "bunx drizzle-kit generate && bunx drizzle-kit migrate",
    "studio": "bunx drizzle-kit studio",
    "seed": "bun src/seed.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "dotenv": "^16.4.0",
    "drizzle-orm": "^0.44.0",
    "drizzle-zod": "^0.7.0",
    "zod": "^3.23.0",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@basicsos/config": "workspace:*",
    "dotenv": "^16.4.0",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.6.0",
    "@types/pg": "^8.11.0"
  }
}
